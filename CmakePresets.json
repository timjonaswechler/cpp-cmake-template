{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "cacheVariables": {
        "CMAKE_PROJECT_NAME": "MeinNeuesProjekt",
        "CMAKE_PROJECT_VERSION": "2024.02.af43b",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      }
    },
    {
      "name": "x64arm",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "macos",
      "inherits": "default",
      "generator": "Unix Makefiles"      
    },
    {
      "inherits": ["x64arm", "debug", "macos"],
      "name": "x64arm_macos_debug",
      "displayName": "x64arm Debug MacOS",
      "description": "x64arm Debug MacOS",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "inherits": ["x64arm", "release", "macos"],
      "name": "x64arm_macos_release",
      "displayName": "x64arm Release MacOS",
      "description": "x64arm Release MacOS",
      "binaryDir": "${sourceDir}/build/${presetName}"
    }
  ],
  "buildPresets": [
    {
      "name": "x64arm_macos_debug",
      "configurePreset": "x64arm_macos_debug",
      "displayName": "x64arm Debug MacOS"
    },
    {
      "name": "x64arm_macos_release",
      "configurePreset": "x64arm_macos_release",
      "displayName": "x64arm Release MacOS"
    }
  ],
  "workflowPresets": [
    {
      "name": "x64arm_macos_debug",
      "steps": [
        {
          "type": "configure",
          "name": "x64arm_macos_debug"
        },
        {
          "type": "build",
          "name": "x64arm_macos_debug"
        }
      ]
    },
    {
      "name": "x64arm_macos_release",
      "steps": [
        {
          "type": "configure",
          "name": "x64arm_macos_release"
        },
        {
          "type": "build",
          "name": "x64arm_macos_release"
        }
      ]
    }
  ]
}